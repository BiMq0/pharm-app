@page "/inventarios/{id:int}"
@inject Services.Inventarios.IInventarioService IInventarioService
@inject NavigationManager Navigation
@using InventarioFarmacia_Shared.DTOs.Inventarios
@using InventarioFarmacia_Front.Components.SimpleComponents.Loader
@rendermode InteractiveServer

<PageTitle>Detalles de Inventario</PageTitle>

@if (EstadoCargador.IsLoading)
{
    <Cargador />
}
else if (inventario != null)
{
    <div class="container-fluid mt-3">
        <div class="row mb-4">
            <div class="col-12">
                <div class="bg-primary text-white p-4 rounded-3 shadow">
                    <div class="d-flex justify-content-between align-items-center flex-wrap">
                        <div>
                            <h1 class="fw-bold mb-2">
                                <i class="bi bi-archive"></i>
                                Inventario - @inventario.Nombre
                            </h1>
                            <p class="opacity-75 mb-0">Estado completo del inventario de productos</p>
                        </div>
                        <div class="col-md-2 col-sm-6">
                            <div class="card border-0 bg-light">
                                <div class="card-body text-center">
                                    <h3 class="text-primary fw-bold">@inventario.CantidadProductosDisponibles</h3>
                                    <p class="text-muted mb-0">Total de Productos</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-check-circle text-success fs-1"></i>
                        <h6 class="text-muted mb-1">Disponibles</h6>
                        <h5 class="fw-bold text-success">@inventario.CantidadProductosDisponibles</h5>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-exclamation-triangle text-warning fs-1"></i>
                        <h6 class="text-muted mb-1">Por Vencer</h6>
                        <h5 class="fw-bold text-warning">@inventario.CantidadProductosPorVencer</h5>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-x-circle text-danger fs-1"></i>
                        <h6 class="text-muted mb-1">Vencidos</h6>
                        <h5 class="fw-bold text-danger">@inventario.CantidadProductosVencidos</h5>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-8">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" class="form-control border-start-0" placeholder="Buscar productos en inventario..."
                        @bind="filtroNombre" @oninput="FiltrarProductos" />
                </div>
            </div>
            <div class="col-md-4 text-end">
                <button class="btn btn-outline-secondary me-2"
                    @onclick="() => { filtroNombre = string.Empty; FiltrarProductos(); }">
                    <i class="bi bi-arrow-clockwise"></i> Limpiar
                </button>
                <button class="btn btn-outline-primary" @onclick="VolverAInventarios">
                    <i class="bi bi-arrow-left"></i> Volver
                </button>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-list-ul"></i>
                            Productos en Inventario
                        </h5>
                    </div>
                    @foreach (var producto in inventario.Productos!)
                    {
                        <div class="card-body">
                            <div class="accordion" id="accordion-ejemplo">
                                <div class="accordion-item border rounded shadow-sm">
                                    <h2 class="accordion-header">
                                        <button class="accordion-button collapsed bg-light" type="button"
                                            data-bs-toggle="collapse" data-bs-target='@($"#collapse-{producto.Id}")' aria-expanded="false"
                                            aria-controls="@($"collapse-{producto.Id}")">
                                            <div class="d-flex w-100 justify-content-between align-items-center me-3">
                                                <div class="d-flex align-items-center">
                                                    <div class="me-3">
                                                        <img src="@producto.Ruta_Imagen" alt="@producto.Nombre" class="img-fluid rounded"
                                                            style="max-height: 50px; max-width: 50px; object-fit: cover;" />
                                                        <span class="fw-bold text-primary">@producto.Nombre</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </button>
                                    </h2>
                                    <div id="@($"collapse-{producto.Id}")" class="accordion-collapse collapse"
                                        data-bs-parent="#accordion-ejemplo">
                                        <div class="accordion-body">
                                            <div class="table-responsive">
                                                <table class="table table-sm table-hover">
                                                    <thead class="table-light">
                                                        <tr>
                                                            <th>Número de Lote</th>
                                                            <th>Fecha de Vencimiento</th>
                                                            <th class="text-center text-success">Disponibles</th>
                                                            <th class="text-center text-warning">Por Vencer</th>
                                                            <th class="text-center text-danger">Vencidos</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var lote in inventario.Lotes!.Where(l => l.Id_Producto == producto.Id))
                                                        {
                                                            <tr>
                                                            <td>
                                                                <span class="fw-semibold">@lote.Nro_Lote</span>
                                                            </td>
                                                            <td>
                                                                @lote.Fecha_Vencimiento.ToString("dd/MM/yyyy")
                                                            </td>
                                                            <td class="text-center">
                                                                <span class="fw-bold">@lote.CantidadProductosDisponibles</span>
                                                            </td>
                                                            <td class="text-center">
                                                                <span class="fw-bold">@lote.CantidadProductosPorVencer</span>
                                                            </td>
                                                            <td class="text-center">
                                                                <span class="fw-bold">@lote.CantidadProductosVencidos</span>
                                                            </td>
                                                        </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container-fluid mt-3">
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i>
            No se pudo cargar la información del inventario.
        </div>
        <button class="btn btn-primary" @onclick="VolverAInventarios">
            <i class="bi bi-arrow-left"></i> Volver a Inventarios
        </button>
    </div>
}

@code {
    [Parameter] public int Id { get; set; }

    private InventarioGeneralDTO? inventario;
    private string filtroNombre = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            EstadoCargador.Activar();
            inventario = await IInventarioService.ObtenerInventarioGeneralAsync(Id);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar el inventario: {ex.Message}");
        }
        finally
        {
            EstadoCargador.Desactivar();
        }
    }

    private void FiltrarProductos()
    {
        // Implementar filtrado 
    }

    private void VolverAInventarios()
    {
        Navigation.NavigateTo("/inventarios");
    }
}