@page "/inventarios"

<div class="container-fluid p-0" style="height: 85vh !important;">
   <div class="row g-3 h-100 px-4">
       <div class="col-md-6 h-100">
           <NavLink href="/inventarioLocal" class="text-decoration-none h-100 d-block">
               <div class="card h-100 border-0 shadow-lg overflow-hidden inventory-card position-relative">
                   <div class="card-img-overlay d-flex flex-column justify-content-center align-items-center text-center position-absolute w-100 h-100"
                        style="background: linear-gradient(135deg, rgba(13, 110, 253, 1), rgba(25, 135, 84, 0.8));">
                       
                       <div class="mb-4">
                           <i class="bi bi-shop text-white" style="font-size: 5rem; filter: drop-shadow(2px 2px 4px rgba(0,0,0,0.3));"></i>
                       </div>
                       
                       <h2 class="card-title text-white fw-bold mb-3" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.5);">
                           Inventario Local
                       </h2>
                       <p class="card-text text-white fs-5 mb-4" style="text-shadow: 1px 1px 2px rgba(0,0,0,0.7);">
                           Gestiona el stock de tu farmacia local
                       </p>
                   </div>
               </div>
           </NavLink>
       </div>

       <div class="col-md-6 h-100">
           <NavLink href="/inventarioEnAlmacen" class="text-decoration-none h-100 d-block">
               <div class="card h-100 border-0 shadow-lg overflow-hidden inventory-card position-relative">
                   <div class="card-img-overlay d-flex flex-column justify-content-center align-items-center text-center position-absolute w-100 h-100"
                        style="background: linear-gradient(135deg, rgba(220, 53, 69, 0.9), rgba(253, 126, 20, 0.8));">
                       
                       <div class="mb-4">
                           <i class="bi bi-building text-white" style="font-size: 5rem; filter: drop-shadow(2px 2px 4px rgba(0,0,0,0.3));"></i>
                       </div>
                       
                       <h2 class="card-title text-white fw-bold mb-3" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.5);">
                           Inventario en Almacén
                       </h2>
                       <p class="card-text text-white fs-5 mb-4" style="text-shadow: 1px 1px 2px rgba(0,0,0,0.7);">
                           Controla el stock en bodega y depósito
                       </p>
                   </div>
               </div>
           </NavLink>
       </div>
   </div>
</div>
