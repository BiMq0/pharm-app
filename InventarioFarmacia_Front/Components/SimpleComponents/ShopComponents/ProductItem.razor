@using InventarioFarmacia_Front.Services
@using InventarioFarmacia_Shared.DTOs.Products;
@using InventarioFarmacia_Shared.DTOs.Lotes;
@using System.ComponentModel
@rendermode InteractiveServer

@if (ProductSelected && Id_Selected_Product != -1)
{
    <div class="container-fluid card d-flex mb-3">
        <div class="card-body row g-3">
            <div class="col-4">
                <div class="border rounded p-3 bg-light d-flex">
                    <div class="me-3">
                        <img src="@SelectedProduct.Ruta_Imagen" class="img-fluid rounded shadow-sm"
                            style="height: 150px; width: 175px; object-fit: cover;" />
                    </div>
                    <div class="row">
                        <div class="bg-primary text-white rounded p-2 text-center">
                            <h6 class="fw-bold mb-1">@SelectedProduct.Nombre</h6>
                            <small class="opacity-75">@SelectedProduct.Nombre_Clinico</small>
                        </div>

                        <div class="row g-2">
                            <div class="col-6">
                                <div class="border rounded p-2 text-center bg-white">
                                    <div class="fw-bold text-success">Bs. @SelectedProduct.Precio_Unitario</div>
                                    <small class="text-muted">Unidad</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="border rounded p-2 text-center bg-white">
                                    <div class="fw-bold text-success">Bs. @SelectedProduct.Precio_Caja</div>
                                    <small class="text-muted">Caja</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-8">
                <div class=" row border rounded py-3 px-2 h-100 d-flex flex-column">
                    <div class="d-flex flex-column col-8">
                        <div class="d-flex justify-content-around align-items-center rounded bg-secondary-subtle p-2">
                            <div class="rounded d-flex gap-3">
                                <label class="fw-semibold">Unidad</label>
                                <input type="radio" name="Unidad" value="UNIT" class="form-check-input" />
                            </div>

                            <div class="rounded d-flex gap-3">
                                <label class="fw-semibold">Caja</label>
                                <input type="radio" name="Unidad" value="BOX" class="form-check-input" />
                            </div>
                        </div>

                        <!-- Mostrar total de productos individuales -->
                        <div class="alert alert-info mt-2 d-flex justify-content-between align-items-center">
                            <span><strong>Total de productos individuales:</strong></span>
                            <span class="badge bg-primary-subtle fs-6">@TotalProductosIndividuales unidades</span>
                        </div>

                        <div
                            class="border rounded p-2 d-flex flex-column justify-content-between align-items-center bg-white">
                            <CascadingValue Value="SelectedProduct.Lotes" Name="LotesDisponibles">
                                <CascadingValue Value="lstIdLotesSeleccionados" Name="lstIdLotesSeleccionados">
                                    @foreach (var lote in LotesSeleccionados)
                                    {
                                        <LoteItem LoteData="@lote" OnRemoveLote="OnRemoveLote"
                                            OnCantidadChanged="OnCantidadLoteChanged" OnLoteCreado="OnLoteCreado" />
                                    }
                                </CascadingValue>
                            </CascadingValue>
                            <button class="btn btn-outline-secondary w-100" type="button" @onclick="AgregarLote" 
                                    disabled="@LotesSeleccionados.Any(l => l.Id == -1)">
                                <i class="bi bi-plus-lg"></i> @(LotesSeleccionados.Any(l => l.Id == -1) ? "Completar lote actual" : "Agregar Lote")
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="my-3">
        <select class="form-select" @bind="Id_Selected_Product">
            <option value="-1">Seleccione un producto</option>
            @foreach (var item in lstProductosDisponibles.Where(p => !lstIdProductosSeleccionados.Contains(p.Id)))
            {
                <option value="@item.Id">@item.Nombre</option>
            }
        </select>
    </div>
}

@code {
    [CascadingParameter(Name = "ProductosDisponibles")]
    public List<ProductoToNewCompraDTO> lstProductosDisponibles { get; set; } = new();
    [CascadingParameter(Name = "ProductosSeleccionados")]
    public List<int> lstIdProductosSeleccionados { get; set; } = new();

    public bool ProductSelected { get; set; } = false;
    public ProductoToNewCompraDTO SelectedProduct { get; set; } = new();
    private int _idSelectedProduct = -1;
    public int Id_Selected_Product
    {
        get => _idSelectedProduct;
        set
        {
            _idSelectedProduct = value;
            SeleccionarProducto(value);
            OnRemoveProduct.InvokeAsync(value);
        }
    }

    public bool AllSelected => SelectedProduct?.Lotes?.Count() <= LotesSeleccionados.Count;
    public List<int> lstIdLotesSeleccionados { get; set; } = new();
    public List<LoteToNewCompraDTO> LotesSeleccionados { get; set; } = new();

    private Dictionary<int, int> CantidadesPorLote { get; set; } = new();

    public int TotalProductosIndividuales => CantidadesPorLote.Values.Sum();

    private void SeleccionarProducto(int Id_Producto)
    {
        var selectedValue = Id_Producto;
        var productoSeleccionado = lstProductosDisponibles.FirstOrDefault(p => p.Id == selectedValue);
        if (productoSeleccionado != null)
        {
            SelectedProduct = productoSeleccionado;
            ProductSelected = true;
        }
        StateHasChanged();
    }

    private void AgregarLote()
    {
        // Solo agregar un nuevo lote si no hay ninguno temporal (Id == -1)
        if (!LotesSeleccionados.Any(l => l.Id == -1))
        {
            var nuevoLote = new LoteToNewCompraDTO
            {
                Id = -1, // ID temporal para indicar que es un nuevo lote
                Cantidad_Productos = 0,
                Nro_Lote = "",
                Fecha_Vencimiento = DateOnly.FromDateTime(DateTime.Now.AddMonths(6))
            };
            
            LotesSeleccionados.Add(nuevoLote);
            StateHasChanged();
        }
    }

    private void OnCantidadLoteChanged((int loteId, int cantidad) cambio)
    {
        CantidadesPorLote[cambio.loteId] = cambio.cantidad;
        OnTotalChanged.InvokeAsync(TotalProductosIndividuales);
        StateHasChanged();
    }

    private void OnRemoveLote(int loteId)
    {
        lstIdLotesSeleccionados.Remove(loteId);
        if (CantidadesPorLote.ContainsKey(loteId))
        {
            CantidadesPorLote.Remove(loteId);
        }

        // Remover el lote de la lista
        var loteToRemove = LotesSeleccionados.FirstOrDefault(l => l.Id == loteId);
        if (loteToRemove != null)
        {
            LotesSeleccionados.Remove(loteToRemove);
        }

        OnTotalChanged.InvokeAsync(TotalProductosIndividuales);
        StateHasChanged();
    }

    private void OnLoteCreado(LoteToNewCompraDTO nuevoLote)
    {
        // Encontrar el lote temporal (Id == -1) y reemplazarlo por el nuevo lote
        var index = LotesSeleccionados.FindIndex(l => l.Id == -1);
        if (index != -1)
        {
            LotesSeleccionados[index] = nuevoLote;
        }
        
        // Agregar el nuevo lote al diccionario de cantidades
        CantidadesPorLote[nuevoLote.Id] = nuevoLote.Cantidad_Productos;
        
        OnTotalChanged.InvokeAsync(TotalProductosIndividuales);
        StateHasChanged();
    }

    [Parameter]
    public EventCallback<int> OnRemoveProduct { get; set; }

    [Parameter]
    public EventCallback<int> OnTotalChanged { get; set; }



}
