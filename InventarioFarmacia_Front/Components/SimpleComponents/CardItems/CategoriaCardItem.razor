@using InventarioFarmacia_Shared;
@inject NavigationManager NavigationManager

<div class="card shadow-sm h-100" style="width: 18rem; transition: transform 0.2s;">
    <div class="card-body d-flex flex-column">
        <div class="text-center mb-3">
            <div class="bg-primary-subtle bg-gradient rounded-circle d-inline-flex align-items-center justify-content-center" 
                 style="width: 80px; height: 80px;">
                <span class="text-white fs-1">@(string.IsNullOrEmpty(Icono) ? "üìÅ" : Icono)</span>
            </div>
        </div>
        
        <h5 class="card-title text-center fw-bold text-primary">@Nombre</h5>
        
        @if (!string.IsNullOrEmpty(Descripcion))
        {
            <p class="card-text text-muted small text-center mb-3">@Descripcion</p>
        }
        
        <div class="mt-auto">
            <div class="d-flex justify-content-between align-items-center">
                <span class="badge bg-success fs-6">@ProductosCount productos</span>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-outline-secondary btn-sm" 
                            title="Editar categor√≠a" @onclick="() => EditarCategoria(Id)">
                        <i class="bi bi-pencil-fill"></i>
                    </button>
                    <button type="button" class="btn btn-outline-secondary btn-sm" 
                            title="Ver categor√≠a" @onclick="() => VerCategoria(Id)">
                        <i class="bi bi-eye-fill"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
    }
</style>

@code {
    [Parameter] public int Id { get; set; }
    [Parameter] public string Nombre { get; set; } = string.Empty;
    [Parameter] public string? Descripcion { get; set; }
    [Parameter] public string? Icono { get; set; }
    [Parameter] public int ProductosCount { get; set; } = 0;

    private void EditarCategoria(int id)
    {
        NavigationManager.NavigateTo($"/categorias/editar/{id}");
    }

    private void VerCategoria(int id)
    {
        NavigationManager.NavigateTo($"/categorias/{id}");
    }
}
